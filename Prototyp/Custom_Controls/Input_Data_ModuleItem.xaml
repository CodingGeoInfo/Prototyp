<UserControl x:Class="Prototyp.Custom_Controls.Input_Data_ModuleItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prototyp.Custom_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="52"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="importNode" Grid.Column="0" Background="DarkOrange" VerticalAlignment="Center" Height="10" Style="{DynamicResource ImportNode}" Click="importNode_Click"/>
        <TextBlock Grid.Column="2" Text="Input Data:" FontSize="10" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2 5 0 0" Height="20" />
        <TextBlock Grid.Column="3" x:Name="BufferModulInputDataTextBlock"  Text="Test" FontSize="10" Foreground="#66CDAA" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 5 0 0" Height="20" Width="120"/>
    </Grid>
</UserControl>
