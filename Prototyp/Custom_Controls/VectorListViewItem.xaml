<UserControl x:Class="Prototyp.Custom_Controls.VectorListViewItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:Prototyp.Custom_Controls" 
             Focusable="True"
             mc:Ignorable="d" Height="Auto" Width="Auto" Padding="0">
    <Grid Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <CheckBox Background="Transparent" x:Name="VectorListViewItemCheckBox" Grid.Column="0" IsChecked="True" Margin="5" HorizontalAlignment="left" VerticalAlignment="Center"/>
        <Button Grid.Column="1" VerticalAlignment="Center" x:Name="VectorListViewItemColorPicker" Margin="10,0,0,0" Height="20" Width="20"/>
        <TextBlock Background="Transparent" x:Name="VectorListViewItemText" Grid.Column="2" Width="Auto" Text="" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 5 0"/>
    </Grid>
</UserControl>

